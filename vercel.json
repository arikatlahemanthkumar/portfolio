{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "client/build/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/static/(.*)", "dest": "/client/build/static/$1", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/serviceWorker.js", "dest": "/client/build/serviceWorker.js", "headers": { "Cache-Control": "no-cache, no-store, must-revalidate" } },
    { "src": "/fallback.html", "dest": "/client/build/fallback.html", "headers": { "Cache-Control": "no-cache, no-store, must-revalidate" } },
    { "src": "/favicon.ico", "dest": "/client/build/favicon.ico" },
    { "src": "/asset-manifest.json", "dest": "/client/build/asset-manifest.json" },
    { "src": "/manifest.json", "dest": "/client/build/manifest.json" },
    { "src": "/(.+\\.(ico|png|jpg|jpeg|gif|webp|svg|css|js|json|txt|pdf))", "dest": "/client/build/$1", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/server.js" }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "true"
  }
}